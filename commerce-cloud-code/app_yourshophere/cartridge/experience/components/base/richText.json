          "values": [
            "Default",
            "Primary",
            "Page Background",
            "Link Color",
            "Menu Background"
          ],
          "required": false
        },
        {
          "id": "textBackground",
          "name": "Text Background (if selected)",
          "type": "enum",
          "default_value": "None",
          "values": [
            "None",
            "Primary",
            "Page Background",
            "Link Color",
            "Menu Background"
          ],

          "required": false
        }
      ]
    }
  ],
