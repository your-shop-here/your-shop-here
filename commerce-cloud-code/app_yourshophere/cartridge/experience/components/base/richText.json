{
  "name": "Textbox",
  "description": "This is the Textbox Component, can be used as Help or FAQ pages or on smaller areas such as image overlays",
  "group": "base",
  "attribute_definition_groups": [
    {
      "id": "textContent",
      "name": "Text Content",
      "description": "The content to show in this component",
      "attribute_definitions": [
        {
          "id": "richText",
          "name": "content",
          "description": "This is the rich text content area",
          "type": "markup",
          "required": true
        }
      ]
    },
    {
      "id": "textStyle",
      "name": "Text Style",
      "description": "The style of the text",
      "attribute_definitions": [
        {
          "id": "textContrast",
          "name": "Text Highlight",
          "type": "enum",
          "values": [
              "Drop Shadow",
              "Gradient"
          ],
          "required": false
        },
        {
          "id": "align",
          "name": "Alignent",
          "type": "enum",
          "values": ["left", "center", "right"],
          "default_value": "left",
          "required": true
        },
        {
          "id": "inParagraph",
          "name": "in Paragraph",
